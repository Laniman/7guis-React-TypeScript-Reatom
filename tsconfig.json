{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "lib": [
      "ES2020",
      "dom"
    ],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "baseUrl": "src",
    "outDir": "dist-ts/",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "jsx": "react-jsx",
  },
  "include": ["src"],
  "exclude": [
    "dist*",
    "node_modules"
  ]
}
